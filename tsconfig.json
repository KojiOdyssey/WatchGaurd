{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["ESNext"],
		"strict": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": false,
		"noEmitHelpers": true,
		"importHelpers": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"node_modules/@types",
			"src/types"
		]
	},
	"exclude": ["node_modules/**/*"],
	"include": ["src/**/*.ts", "src/**/*.json"]
}